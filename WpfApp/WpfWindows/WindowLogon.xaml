<Window x:Class="WpfApp.WpfWindows.WindowLogon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.WpfWindows"
        mc:Ignorable="d"
        Title="Logon" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lbName" Content="LoginName" HorizontalAlignment="Left" Margin="19,67,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="109,67,0,0" TextWrapping="Wrap" Text="kevin" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbPassword" Content="Password" HorizontalAlignment="Left" Margin="19,124,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="161,191,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Eixt" HorizontalAlignment="Left" Margin="43,191,0,0" VerticalAlignment="Top" Width="75" Click="btnExit_Click"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="109,124,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
